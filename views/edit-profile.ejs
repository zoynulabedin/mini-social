<div class="profile-body">
	<div class="profile-wraper">
		<div class="profile-info">
			<div class="user info"><%- include ("layouts/profile.ejs") %></div>
			<hr />
			<div class="user-menu"><%- include ("layouts/menu.ejs") %></div>
		</div>
		<div class="profile-box">
			<h1>Edit</h1>
			<% if (message) { %>
			<p><%= message %></p>
			<% } %>
			<div class="form-wraper">
				<form action="/edit-profile" method="POST">
					<div class="form-group">
						<label for="">Name</label>
						<input value="<%= user.name %>" name="name" type="text" />
					</div>
					<div class="form-group">
						<label for="">Email</label>
						<input value="<%= user.email %>" name="email" type="text" />
					</div>
					<div class="form-group">
						<label for="">User Name</label>
						<input value="<%= user.username %>" name="username" type="text" />
					</div>

					<div class="form-group">
						<button type="submit">Update</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

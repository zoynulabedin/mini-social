<div class="profile-body">
	<div class="profile-wraper">
		<div class="profile-info">
			<div class="user info"><%- include ("layouts/profile.ejs") %></div>
			<hr />
			<div class="user-menu"><%- include ("layouts/menu.ejs") %></div>
		</div>
		<div class="profile-box">
			<div class="box-content">
				<h2>Change Photo</h2>
				<% if (message) { %>
				<p><%= message %></p>
				<% } %>
				<hr />
				<div class="form-wraper">
					<form
						action="/profile-photo"
						method="POST"
						enctype="multipart/form-data"
					>
						<div class="form-group photo-wrapper">
							<label for="">Select a Photo</label>
							<div class="profile-photo">
								<img
									id="img_preview"
									src="./images/<%= user.photo %> "
									alt=""
								/>
							</div>
							<label class="upload">
								<i class="fa fa-camera uplaod"></i>
								<input
									id="profile_photo"
									name="profile_photo"
									style="display: none"
									type="file"
								/>
							</label>
						</div>
						<div class="form-group">
							<button type="submit">Update profile picture</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
